(def gen-fn
 (fn (num-args gen-body)
  (def fn-t (get-fn-type num-args))

  (def f (c-call LLVMAddFunction * * m * '' * fn-t))

  (def prev (c-call LLVMGetInsertBlock * * main-b))

  (def bb (c-call LLVMAppendBasicBlockInContext * * c * f * 'entry'))
