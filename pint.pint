(def tr-c-call
 (fn (form state tr)
  (def fn-ptr? (= (quote *) (head (tail form))))

  (def fn-expr (head (drop (if fn-ptr? 2 1) form)))

  (def sig (drop (if fn-ptr? 3 2) form))

  (def ret-type (head sig))
  (def typed-args (chunk 2 (tail sig))) ; care for wrongly chunked!
  (def arg-types (map fst (head typed-args)))

  (def state^
   (if fn-ptr?
    (tr (cons fn-expr ()) state tr)
    (if (state-get-global state fn-expr)
     state
     (state-add-global-fn state fn-expr ret-type arg-types))))

  (def target-fn
   (if fn-ptr?
    (extract-pointer
     (state-cur-value state^)
     (c-call LLVMPointerType * * (tr-c-fn-type ret-type arg-types) int 0)
     'fn-ptr')
    (do
     (def entry (state-get-global state^ fn-expr))
     (unpair entry (fn (label val)
                    (if (= label c-fn-tag)
                     val
                     (error (str (cons 'not a C fn: ' (cons (symbol-name fn-expr) ()))))))))))

  (def casts (stap (fn (st typed-arg)
                    (unpair typed-arg
                     (fn (type arg)
                      (def st^ (tr (cons arg ()) st tr))
                      (def st^^ (tr-cast-to-c-type st^ type (state-cur-value st^)))
                      (pair st^^ (state-cur-value st^^)))))
                   state^
                   (reverse (head typed-args))))

  (def state^^ (fst casts))
  (def c-casted-args (reverse (snd casts)))

  (def num-args (list-length c-casted-args))

  (def is-void (= (symbol 'void') ret-type))
  (def res (c-call LLVMBuildCall *
            * main-b
            * target-fn
            * (c-ptr-array c-casted-args)
            int num-args
            * (if is-void '' (str (cons 'call-' (cons (if fn-ptr? 'fn-ptr' (symbol-name fn-expr)) ()))))))

  (if is-void
   (tr-nil state^^)
   (state-set-cur-value state^^
    (tr-cast-from-c-type state^^ ret-type res)))))

(def tr-c-val-ref
 (fn (form state tr)

  ; todo check num args
  (def val-name (head (tail form)))

  (def state^
   (if (state-get-global state val-name)
    state
    (state-add-global-var state val-name)))

  (def entry (state-get-global state^ val-name))

  (def target-val (unpair entry (fn (label val)
                                 (if (= label c-var-tag)
                                  val
                                  (error (str (cons 'not a C var: ' (cons (symbol-name val-name) ()))))))))

  (def c-ptr-val (build-val
                  c-pointer-type-index
                  (c-call LLVMBuildPtrToInt *
                   * main-b
                   * target-val
                   * i64-type
                   * 'ptr-as-i64')))

  (state-set-cur-value state^ c-ptr-val)))


