    * value-type
    * (c-ptr-array
        (cons string-type-index
        (cons (c-call LLVMBuildPtrToInt *
               * main-b
               * (c-call LLVMBuildInBoundsGEP *
                  * main-b
                  * strmem
                  * (c-ptr-array (cons (i64-const 0) ()))
                  int 1
                  * 'str to ptr')
               * i64-type
               * 'ptr to int') ())))
    int 2))))

